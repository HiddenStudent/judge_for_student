<% provide(:title, 'Send Task') %>



<div class="center jumbotron">
<h1>Write ur task's decision:</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">


    <% if user_signed_in? %>





    <%= form_for(:answ, url: answ_create_path) do |f| %>

      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' ,placeholder: "Compose new answer..." %>

      <%= f.submit "Create", class: "btn btn-primary" %>

    <% end %>


      <% else %>

    <% flash[:danger] = 'please log in' %>
      <% redirect_to new_user_session_path %>
      <% end %>
  </div>
</div>
</div>