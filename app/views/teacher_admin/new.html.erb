<% provide(:title, 'New Task') %>
<h1>New task</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:teach, url: administration_create_task_path) do |f| %>




      <%= f.label :content %>
      <%= f.text_area :content, class: 'form-control' ,placeholder: "Compose new task..." %>

      <%= f.label :id_lang %>
      <%= f.number_field :id_lang , class: 'form-control' %>

      <%= f.submit "Create", class: "btn btn-primary" %>

    <% end %>






    <p>New user? <%= link_to "Sign up now!", '#' %></p>
    <p>Forgot password? <%= link_to "Remind password!", '#' %></p>
  </div>
</div>