<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@task) do |f| %>



      <%= f.label :content %>
      <%= f.text_area :content , class: 'form-control' %>



      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
