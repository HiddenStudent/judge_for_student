<div class="left jumbotron">

  <h1>Administration panel</h1>

  <%if current_user.teacher && Group.find_by_teacher_id(current_user.id).nil?%>
    <%= link_to "Create new group", new_group_path , class: "btn btn-lg btn-primary" %>
  <%else%>
    <%= link_to "Group", group_path(Group.find_by_teacher_id(current_user.id)) , class: "btn btn-lg btn-primary" %>
    <%= link_to "[delete group]", group_destroy_path(Group.find_by_teacher_id(current_user.id)), method: :delete, data: { confirm: "You sure?" }, class: "btn btn-lg btn-primary" %>
  <%end%>
  <p></p>
  <%= link_to "Create new student", new_user_path , class: "btn btn-lg btn-primary" %>
  <p></p>

</div>






